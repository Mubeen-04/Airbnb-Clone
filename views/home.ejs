<% layout("layouts/boilerplate") %>

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <header class="hero d-flex align-items-center justify-content-center text-center text-white">
        <div>
            <h1 class="display-3 fw-bold">Welcome to StayNest</h1>
            <p class="lead">Find your perfect stay, rent unique homes, and explore amazing destinations.</p>
        </div>
    </header>
    

    <!-- About Section -->
    <section class="container text-center my-5">
        <h2 class="fw-bold">Discover Unique Stays</h2>
        <p class="text-muted">
            From cozy apartments to luxurious villas, StayNest helps you find the best places to stay worldwide.
        </p>
    </section>

    <!-- Features Section -->
    <section class="container my-5">
        <div class="row text-center">
            <div class="col-md-4">
                <img src="/images/comfortable.jpg" class="feature-img mb-3" alt="Comfortable Stays">
                <h4>Comfortable Stays</h4>
                <p>Enjoy premium amenities and warm hospitality.</p>
            </div>
            <div class="col-md-4">
                <img src="/images/explore.jpg" class="feature-img mb-3" alt="Explore Places">
                <h4>Explore Places</h4>
                <p>Find hidden gems in cities and scenic locations.</p>
            </div>
            <div class="col-md-4">
                <img src="/images/easy-booking.jpg" class="feature-img mb-3" alt="Easy Booking">
                <h4>Easy Booking</h4>
                <p>Seamless booking experience with secure payments.</p>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="cta text-center py-5">
        <div class="container">
            <h2 class="fw-bold display-4">Your Next Adventure Awaits</h2>
            <p class="lead mt-3 text-muted">Find handpicked stays, unique homes, and unforgettable experiences.</p>
            <a href="/listings" class="cta-btn">
                Explore Stays <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </section>    
</div>
